<table class="table table-striped table-bordered border-primary table-hover">
  <thead class="thead-dark">
  <tr>
    <th>Company</th>
    <th>Ticker</th>
    <th>Current Price</th>
    <th>Market Cap</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @stocks.each do |stock| %>
    <% if current_user.id == stock.user_id %>

      <% if stock.ticker == "" %>
        <% @ticker.company_name = 'N/A' %>
        <% @ticker.latest_price = 'N/A' %>
        <% @ticker.symbol = 'N/A' %>
      <% elsif stock.ticker %>
        <% begin %>
          <% @ticker = StockQuote::Stock.quote(stock.ticker) %>
        <% rescue %>
          <% @ticker.company_name = 'N/A' %>
          <% @ticker.latest_price = 'N/A' %>
          <% @ticker.symbol = 'N/A' %>
        <% end %>
      <% end %>

      <tr>
        <td><%= link_to @ticker.company_name, stock %></td>
        <td><%= @ticker.symbol %></td>
        <td>$<%= number_with_precision(@ticker.latest_price, :precision => 2, :delimiter => ',') %></td>
        <td>$<%= number_with_precision(@ticker.market_cap, :precision => 2, :delimiter => ',') %></td>
        <td><center><%= link_to 'Edit', edit_stock_path(stock), class: "btn btn-secondary" %></center></td>
        <td><center><%= link_to 'Delete', stock, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></center></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

